{
	"compilerOptions": {
		"module": "commonjs",
		"lib": [
			"ES6"
		],
		"rootDirs": [
			"./src"
		],
		"outDir": "./build",
		"allowJs": true,
		"target": "es2017",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
	},
	"include": ["./src/**/*", "/**/*.ts"],
	"exclude": [
		"node_modules"
	],
	"ts-node": {
		"esm": true,     
	  "experimentalSpecifierResolution": "node",
		"compiler": "typescript"
  }
}